<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".RegisterCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:text="Registro Cliente"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#CF1717"
            android:ems="10"
            android:inputType="textPersonName"
            android:backgroundTint="#AEA8A8"/>

        <TextView
            android:id="@+id/userTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Contraseña"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:backgroundTint="#AEA8A8"
            android:textColorHint="#CF1717" />

        <TextView
            android:id="@+id/userTextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Confirmar Contraseña"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:backgroundTint="#AEA8A8"
            android:textColorHint="#CF1717" />

        <TextView
            android:id="@+id/userTextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Correo electrónico"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColorHint="#CF1717"
            android:backgroundTint="#AEA8A8"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/userTextView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Telefono"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/telefonoEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:maxLength="9"
            android:backgroundTint="#AEA8A8"
            android:textColorHint="#CF1717" />


        <TextView
            android:id="@+id/userTextView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Fecha nacimiento"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fechaNacimientoEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#AEA8A8"
            android:textAlignment="center"
            android:hint="dd/mm/aaaa"
            android:ems="10"
            android:inputType="date"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="register"
            android:text="Registrarme" />


    </LinearLayout>

</ScrollView>