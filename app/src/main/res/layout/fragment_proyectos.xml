<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".fragments.ProyectosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:text="@string/publicarProyecto"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewNombreProyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Nombre proyecto"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nombreP"
            android:layout_width="216dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/borde"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />


        <TextView
            android:id="@+id/textViewNombreDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Descripcion proyecto"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/descripcionP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/borde"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:hint="Escribe tus requisitos para la edición..."
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:scrollHorizontally="false" />

        <TextView
            android:id="@+id/textViewDisponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Disponibilidad"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxManana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Mañana" />
            <!-- SEPARADOR -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <!-- SEPARADOR -->
            <CheckBox
                android:id="@+id/checkBoxTarde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarde" />
            <!-- SEPARADOR -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <!-- SEPARADOR -->
            <CheckBox
                android:id="@+id/checkBoxNoche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="Noche" />

            <!-- <Button
                 android:layout_width="110dp"
                 android:layout_height="55dp"
                 android:layout_alignParentLeft="true"
                 android:layout_marginStart="20dp"
                 android:text="Mañana" />

             <Button
                 android:layout_width="110dp"
                 android:layout_height="55dp"
                 android:layout_centerHorizontal="true"
                 android:text="Tarde" />

             <Button
                 android:layout_width="110dp"
                 android:layout_height="55dp"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="20dp"
                 android:text="Noche" />

             <Button
                 android:layout_width="110dp"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="55dp"
                 android:layout_marginRight="20dp"
                 android:text="Todo el dia" />-->
        </LinearLayout>


        <TextView
            android:id="@+id/textViewFotoP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Foto del proyecto"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/foto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/image_placeholder"
            android:background="@drawable/borde_imagen_proyecto"
            android:scaleType="fitXY"
            />


        <Button
            android:id="@+id/botonImagen"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:text="Subir Archivo"
            android:backgroundTint="#0037ff"/>

        <TextView
            android:id="@+id/textViewPaquetes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Paquetes disponibles"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@drawable/borde"
            >

            <TextView
                android:id="@+id/textViewPBasico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:text="Básico"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <EditText
                    android:id="@+id/textViewPBasicoPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00.00"
                    android:paddingTop="4dp"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:inputType="numberDecimal"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="€"/>
            </LinearLayout>

            <EditText
                android:id="@+id/descripcionPBasico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/borde"
                android:ems="10"
                android:gravity="top"
                android:hint="Escribe la descripción para el paquete básico..."
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:scrollHorizontally="false" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@drawable/borde">

            <TextView
                android:id="@+id/textViewPAvanzado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:text="Avanzado"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <EditText
                    android:id="@+id/textViewPAvanzadoPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00.00"
                    android:paddingTop="4dp"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:inputType="numberDecimal"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="€"/>

            </LinearLayout>

            <EditText
                android:id="@+id/descripcionPAvanzado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/borde"
                android:ems="10"
                android:gravity="top"
                android:hint="Escribe la descripción para el paquete avanzado..."
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:scrollHorizontally="false" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@drawable/borde">

            <TextView
                android:id="@+id/textViewPPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:text="Premium"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <EditText
                    android:id="@+id/textViewPPremiumPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00.00"
                    android:paddingTop="4dp"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:inputType="numberDecimal"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="€"/>

            </LinearLayout>

            <EditText
                android:id="@+id/descripcionPPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/borde"
                android:ems="10"
                android:gravity="top"
                android:hint="Escribe la descripción para el paquete premium..."
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:scrollHorizontally="false" />

        </RelativeLayout>

        <Button
            android:id="@+id/publicar"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:onClick="publicar"
            android:backgroundTint="#0037ff"
            android:text="Publicar" />

    </LinearLayout>

</ScrollView>