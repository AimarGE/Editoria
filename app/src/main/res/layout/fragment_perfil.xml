<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:outlineAmbientShadowColor="@color/black"
        >

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_imagen_proyecto"
            android:layout_marginTop="30dp"
            android:paddingBottom="56dp"
            android:outlineProvider="bounds"
            android:elevation="5dp">

            <LinearLayout
                android:id="@+id/linearLayFav"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="-10dp"
                android:orientation="vertical">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/favorito"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/favorite_border"
                    android:layout_weight="1">
                </com.airbnb.lottie.LottieAnimationView>


            </LinearLayout>


            <TextView
                android:id="@+id/estadoConectividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/borde_desconectado"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="offline"
                android:textColor="#EA0B0B"
                android:textStyle="bold" />

            <!--<ToggleButton
                android:id="@+id/favorito"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/toggle_favorite_selector"
                android:textOff=""
                android:textOn="" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/blank_profile"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/nombreEditor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="20dp"
                    android:textAlignment="center"
                    android:text="(Nombre Editor)"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/breveDescripcionEditor"
                    android:paddingHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:text="(breve descripciÃ³n del editor)"
                    android:textColor="#636363"
                    android:textSize="15dp"/>

            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:layout_marginTop="200dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="asdasdasd"
            ></TextView>

    </LinearLayout>




</ScrollView>