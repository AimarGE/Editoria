<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".fragments.EventoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:text="@string/tituloEvento"
            android:textColor="#000000"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagenEvento"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/evento_img"
            android:layout_margin="20dp"
            android:scaleType="fitXY"/>
        
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="30dp"
            android:textSize="20dp"
            android:text="¡Estamos celebrando el primer lanzamiento beta de nuestra aplicación, por ello hemos creado un evento donde podéis subir la imagen más divertida que tengáis!"
            android:textColor="@color/black"
            android:background="@drawable/borde"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            >
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_miembro_desde"
                android:tint="@color/black"/>
            <TextView
                android:id="@+id/numeroDeConcursantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:text="3"/>
        </LinearLayout>

        <Button
            android:id="@+id/botonInscribirse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2342FF"
            android:text="Inscribirse"/>

    </LinearLayout>

</ScrollView>